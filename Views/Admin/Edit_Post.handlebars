<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Edit- Post</title>
        <style>
            .title-page {
                padding-left: 0;
                padding-right: 0;
                padding-bottom: 0;
                padding-top: 1.5rem;

                text-align: center;
            }

            form label {
                padding: 0.5rem;
                padding-left: 0;

                font-weight: bold;
            }

            form 
            input#title,
            input#slug,
            input#description,
            input#content {
                padding: 0.8rem;
            }

            form #button-create {
                padding: 0.7rem;

                font-weight: bold;
                font-size: 1.10rem;
                border: 0.1rem solid #FFFFFFAF;
            }

            form #button-create:hover {
                transition: .5s ease all;

                color: #343A40;
                background-color: #FFFFFF;
            }

            form #button-create:not(:hover) {
                transition: .5s ease all;

                color: #FFFFFF;
                background-color: #343A40;
            }
        </style>
    </head>
    <body>
        {{#each errorsFound}}
            <div class="alert alert-danger">{{error}}</div>
            {{else}}
        {{/each}}
        <h1 class="title-page">Edit Post</h1>
        <hr class="line-page">

        <div class="card">
            <div class="card-body">
                <form action="/admin/posts/edit" method="post">
                    <input type="hidden" id="category-name" value="{{post.category}}">
                    <input type="hidden" name="id" value="{{post._id}}">

                    <label for="name">Post Title</label>
                    <input type="text" name="title" id="title" class="form-control" value="{{post.title}}">

                    <label for="description">Post Slug</label>
                    <input type="text" name="slug" id="slug" class="form-control" value="{{post.slug}}">

                    <label for="description">Post Description</label>
                    <input type="text" name="description" id="description" class="form-control" value="{{post.description}}">

                    <label for="content">Post Content</label>
                    <textarea name="content" id="content" class="form-control">{{post.content}}</textarea>

                    <label for="category">Post Category</label>
                    <select name="category" id="category-select" class="custom-select form-control">
                        {{#each categories}}
                            <option value="{{_id}}">{{name}}</option>
                        {{else}}
                            <option value="0">No category registered</option>
                        {{/each}}
                    </select>

                    <script type="text/javascript">
                        const category = document.getElementById("category-name").value;
                        document.getElementById("category-select").value = category;
                    </script>

                    <button id="button-create" class="btn btn-success mt-4 form-control">Save Post</button>
                </form>
            </div>
        </div>
    </body>
</html>